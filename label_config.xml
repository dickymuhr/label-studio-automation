<View>
  <Style>
    .ant-radio-wrapper { 
      font-size: 18px; 
      width: 120px;
    }
  </Style>
  
  <View style="padding: 10px 20px;">
    <Header value="News Highlight" style="font-weight: 500"/>
    <View style="font-size: 18px; border: 1px solid #e8e8e8; background: rgba(0, 0, 0, 0.01);
                 margin-bottom: 0.5em; border-radius: 5px; padding: 20px 10px;
                 overflow-wrap: break-word; height: 300px; overflow-y: auto;">
      <Text name="text" value="$highlight"/>
    </View>
  </View>

  <View style="padding: 10px 20px;">
    <Header value="Sentiment Level" style="font-weight: 500"/>
    <Choices name="sentiment" toName="text" showInLine="true" choice="single-radio" required="true">
      <Choice value="1" hotkey="1" />
      <Choice value="2" hotkey="2" />
      <Choice value="3" hotkey="3"/>
      <Choice value="4" hotkey="4" />
      <Choice value="5" hotkey="5" />
      <Choice value="6" hotkey="6" />
    </Choices>
  </View>
  
  <View style="padding: 10px 20px;">
    <Header value="Emotion" style="font-weight: 500"/>
    <Choices name="emotion" toName="text" showInLine="true" choice="single-radio" required="true">
      <Choice value="Happy" hotkey="h" />
      <Choice value="Sad" hotkey="s" />
      <Choice value="Fear" hotkey="f" />
      <Choice value="Angry" hotkey="a" />
      <Choice value="Love" hotkey="l" />
      <Choice value="Neutral" hotkey="n" />
    </Choices>
  </View>
</View>